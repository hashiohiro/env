##############################################################
# Git 設定テンプレート (.gitconfig.template)
# - 公開前提：個人情報・マシン依存設定は含まない
# - 作業効率・見やすさ・安全性を高めるための設定
##############################################################

[user]
    name = hashiohiro
    email = hashiohiro@gmail.com

##############################################################
# 色設定：ステータスや差分の出力を見やすく
##############################################################
[color]
    ui = auto

##############################################################
# よく使うコマンドの短縮系（git st など）
##############################################################
[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    lg = log --oneline --graph --decorate --all  # 履歴を一行で視覚的に

##############################################################
# 改行コード設定（OS差異による混入を防止）
# - Mac/Linux: input
# - Windows: true
##############################################################
[core]
    autocrlf = false

##############################################################
# pull 時にマージではなく rebase を使う（履歴を直線に保つ）
##############################################################
[pull]
    rebase = true

[branch]
    autosetuprebase = always  # 新規ブランチも rebase に

##############################################################
# push のデフォルトを現在のブランチに限定
# - 誤 push を防ぐ
##############################################################
[push]
    default = current